@{
    Layout = "_osmanLayout";
}

@model ExpeditionModel
<div class="container-admin mt-2">
    <h5 class="display-4">Edit Expedition</h5>
    <hr />
    <form asp-controller="Admin" asp-action="ExpeditionEdit" method="post">
        <div class="row d-flex justify-content-around w-100 text-center">
            <div class="col-md-2">
                <label asp-for="ExpeditionStart">Start City</label>
                <select asp-for="ExpeditionStart" asp-items="ViewBag.Cities" class="form-control text-center"></select>
            </div>
            <div class="col-md-2">
                <label asp-for="ExpeditionStation">Start Station</label>
                <select asp-for="ExpeditionStation" asp-items="ViewBag.Cities" class="form-control text-center"></select>
            </div>
            <div class="col-md-2">
                <label asp-for="ExpeditionFinish">Start Finish</label>
                <select asp-for="ExpeditionFinish" asp-items="ViewBag.Cities" class="form-control text-center"></select>
            </div>
            <div class="col-md-2">
                <label asp-for="BusId">Busx</label>
                <select asp-for="BusId" asp-items="ViewBag.Buses" class="form-control text-center"></select>
            </div>

        </div>
        <div class="row d-flex justify-content-around w-100 text-center mt-3">
            <div class="col-md-2">
                <label asp-for="ExpeditionDate">Date</label>
                <input type="date" asp-for="ExpeditionDate" class="form-control text-center" />
            </div>
            <div class="col-md-2">
                <label asp-for="ExpeditionHour">Hour</label>
                <input asp-for="ExpeditionHour" class="form-control text-center" />
            </div>
            <div class="col-md-2">
                <label asp-for="ExpeditionPrice">Price</label>
                <input asp-for="ExpeditionPrice" class="form-control text-center" />
            </div>
            <div class="col-md-2">
                <input type="hidden" asp-for="ExpeditionId" />
                <button type="submit" class="btn btn-sm btn-success mt-4">Save Changes</button>
            </div>
        </div>
    </form>
</div>