@model CityListViewModel

@{
    foreach (var item in Model.CitiesByCityName)
    {
        <div class="container bg-white mt-4">
            <div class="city-name mt-3">
                @item.CityName Otobus Biletleri
            </div>
            <div class="container-main">
                <div class="d-flex container-main-top">
                    <div class="row w-100">
                        <div class="ticket-form  col-md-6">
                            <div class="ticket-buttons">
                                <button class="btn btn-sm btn-danger w-50">Tek Yön</button>
                                <button class="btn btn-sm btn-secondary w-50">Gidiş Dönüş</button>
                            </div>

                            <form asp-controller="Home" asp-action="Expedition">
                                <div class="mt-4">
                                    <div><i class="fa-solid fa-location-dot"></i>Kalkış</div>
                                    <select asp-for="Sales.cityStart" class="form-select">
                                        @{
                                            foreach (var city in Model.CitiesAll)
                                            {
                                                <option>@city.CityName</option>
                                            }
                                        }
                                    </select>
                                    <div class="mt-5"><i class="fa-solid fa-location-dot"></i>Varış</div>
                                    <select asp-for="Sales.cityFinish" class="form-select">

                                        @{
                                            foreach (var city in Model.CitiesAll)
                                            {
                                                <option>@city.CityName</option>
                                                if (item.CityName == city.CityName)
                                                {
                                                    <option hidden selected>@city.CityName</option>
                                                }
                                            }
                                        }
                                    </select>
                                    <div class="mt-5">
                                        <i class="fa-regular fa-calendar-days"></i>Gidişarihi
                                    </div>
                                    <input type="date" class="form-control" id="date" asp-for="Sales.date" />
                                    <span class="text-danger" id="date-control"></span>
                                </div>

                                <input type="submit" class="btn btn-danger w-100 mt-4" id="sefer-btn" value="Sefer Ara" />

                            </form>
                        </div>
                        <div class="city-image col-md-6">
                            <img src="https://picsum.photos/id/111/600/400" class="ms-3" style="width: 100%;" alt="">
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div>@item.CityTitle</div>
                    <div class="mt-3">
                        @item.CityDescription
                    </div>
                    <div class="mt-4">
                        <span style="font-size: 20pt; font-weight: bold;">Tarihin Kokusunu Almak İçin Gezilecek Yerler</span><br>
                        @item.CityDescription2
                    </div>
                    <div class="mt-4">
                        <span style="font-size: 20pt; font-weight: bold;">Görsel Şölen Yerler</span><br>
                        @item.CityDescription3
                    </div>
                    <div class="mt-4">
                        <span style="font-size: 20pt; font-weight: bold;">Sanatla Buluşma Noktaları</span><br>
                        @item.CityDescription4
                    </div>
                    <div class="mt-4">
                        <span style="font-size: 20pt; font-weight: bold;">Nerede Ne Yesek</span><br>
                        @item.CityDescription5
                        <br><br>
                    </div>
                </div>
            </div>
        </div>
    }
}